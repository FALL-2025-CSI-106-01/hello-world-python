// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
// To reboot the devcontainer 
//    Opening the Command Palette (Ctrl+Shift+P)
//    Running "Dev Containers: Rebuild Container"

//Instructions for Students:
/* For Windows:

    Install Docker Desktop
    Enable WSL2 (if not already)
    Install VS Code + Dev Container extension
For Mac:
    Install Docker Desktop
    Install VS Code + Dev Container extension */


{
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:3.11",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install pytest",

	// Configure tool-specific properties.
	"customizations": {
	    "vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode-remote.remote-containers"
			],
			"settings": {
				"editor.quickSuggestions": false,
				"editor.suggestOnTriggerCharacters": false,
				"github.copilot.enable": false,
				"editor.parameterHints.enabled": true,
				"github.copilot.inlineSuggest.enable": false,
				"github.copilot.chat.enable": false,
				"workbench.panel.chat.enabled": false,
				"chat.editor.enableCodeActions": false,
				"accessibility.signals.chatRequestSent": "off",
				"accessibility.signals.chatResponseReceived": "off",
				"extensions.autoCheckUpdates": false,
				"extensions.autoUpdate": false,
				"extensions.ignoreRecommendations": true,
				"workbench.settings.enableNaturalLanguageSearch": false,
				"update.mode": "none",
				"telemetry.telemetryLevel": "off",
				"remote.extensionKind": {
					"ms-python.python": ["workspace"],
					"ms-vscode-remote.remote-containers": ["ui"]
				}
			}
		  }
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}